fun main() {
introduction("Janet",20)
    machine(3)
    machine(12)
    machine(20)
    name()
    calc(4,5)
    var janet=Human("Janet",20,56)

}
fun introduction(name:String, age:Int){
 println("My name is $name and I am $age years old.")
}
fun machine(age:Int){
    if (age<6){
        println("Serve a glass of milk")
    }
    else if(age>6 && age<15){
        println("serve a bottle of fanta")
    }
    else{
        println("serve cocacola")
    }
}
fun name():Int{
    var names=arrayOf("Janet", "Esther","Tom", "Sandra")
    for (nam in names){
        if (nam.length<5){
          println(names.size)
        }
    }
    return names.size
}
fun calc(a:Int, b:Int):Int{
    var multiply= a*b
    var divide= a/b
    var modulus=a%b
    return multiply
    return divide
    return modulus
}
class Human(var name: String, var age: Int, var weight: Int){

    fun eat(foodWeight: Int){
        println( "I am eating $foodWeight kgs of food" )
        weight+=foodWeight
    }
    fun speak(speech: String){
        println("$speech")
    }
    fun birthday( ){
        age++
    }
}
fun comparison(x: Int, y:Int):Int{
    if (x>y){
        return y
    }
    else{
        return x
    }
}
fun game(rock:String, paper:String, scissors:String){
   if (paper>rock) {
       println("Player 1 wins")
   }
    else if (rock>scissors){
        println("Player 2 wins")
   }
    else if (scissors>rock){
        println("player wins")
   }
    else{
        println("its a draw")
   }
}
fun fiveNames(nam1:String,nam2:String,nam3:String,nam4:String,nam5:String,){
    var nams= arrayOf(nam1,nam2,nam3,nam4,nam5)
    println(nams.toString())
}
